---
import type { CollectionEntry } from "astro:content";

import Javascript from "@/components/icons/Javascript.astro";
import Typescript from "@/components/icons/Typescript.astro";
import Next from "@/components/icons/Next.astro";
import React from "@/components/icons/React.astro";
import Tailwind from "@/components/icons/Tailwind.astro";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;

const icons = {
  Next,
  Typescript,
  React,
  Tailwind,
  Javascript,
};
---

<a
  href={`/projects/${project.slug}`}
  class="group flex flex-col justify-between rounded-xl border border-neutral-800 bg-neutral-900/50 backdrop-blur-sm p-8 shadow-md transition-all duration-300 hover:border-emerald-500/50 hover:shadow-emerald-500/10 hover:shadow-2xl hover:-translate-y-1 hover:bg-neutral-900/70"
  rel="prefetch"
>
  <div class="mb-6">
    <p class="mb-3 text-sm font-semibold uppercase tracking-wider text-neutral-400 group-hover:text-emerald-400 transition-colors duration-300">
      {project.data.title}
    </p>
    <p class="text-neutral-200 text-lg leading-relaxed group-hover:text-neutral-100 transition-colors duration-300">
      {project.data.description}
    </p>
  </div>

  <div class="flex gap-4 flex-row">
    {
      // @ts-ignore
      project.data.tags.map((tag) => {
      // @ts-ignore
        const Component = icons[tag];

        return <Component className="w-5 h-5 text-neutral-500 group-hover:text-emerald-400 transition-colors duration-300" />;
      })
    }
  </div>
</a>
