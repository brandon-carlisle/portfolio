---
import ProjectCard from "@/components/ProjectCard.astro";
import Layout from "@/layouts/Layout.astro";

import { getCollection } from "astro:content";

const projects = await getCollection("projects", ({ data }) => {
  return data.published;
});

const orderedProjects = [...projects].sort(
  (a, b) => a.data.order - b.data.order,
);
---

<Layout
  title="Projects | Brandon Carlisle - Web Development Portfolio"
  description="Browse Brandon Carlisle's web development portfolio featuring React, Next.js, and TypeScript projects. See live demos and source code."
>
  <div class="animate-fade-in">
    <div class="mb-12">
      <h1 class="text-4xl font-semibold mb-4 text-neutral-100">Projects</h1>
      <p class="text-lg text-neutral-300 leading-relaxed">
        A collection of projects I've built, showcasing my work with modern web
        technologies.
      </p>
    </div>

    <div class="flex flex-col gap-6">
      {orderedProjects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</Layout>
