---
import ProjectCard from "@/components/ProjectCard.astro";
import Layout from "@/layouts/Layout.astro";

import { getCollection } from "astro:content";

const projects = await getCollection("projects", ({ data }) => {
  return data.published;
});

const orderedProjects = [...projects].sort(
  (a, b) => a.data.order - b.data.order,
);
---

<Layout
  title="Projects - Brandon Carlisle"
  description="Explore the collection of projects by Brandon Carlisle. From frontend to backend, showcasing technologies like JavaScript, TypeScript, Tailwind, React, and Next.js."
>
  <div class="animate-fade-in">
    <div class="mb-12">
      <h1 class="text-4xl font-semibold mb-4 text-neutral-100">Projects</h1>
      <p class="text-lg text-neutral-300 leading-relaxed">
        A collection of projects I've built, showcasing my work with modern web technologies.
      </p>
    </div>

    <div class="flex flex-col gap-6">
      {orderedProjects.map((project) => <ProjectCard project={project} />)}
    </div>
  </div>
</Layout>
